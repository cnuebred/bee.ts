{
    "compilerOptions": {
        "declaration": true,
        "target": "ES2021",
        "experimentalDecorators": true,
        "incremental": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        "rootDir": "./src",
        "outDir": "./build"
    },
    "include": [
        "./src/**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "src/app.ts"
    ]
}